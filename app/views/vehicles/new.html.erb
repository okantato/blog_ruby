<h2>New Vehicle Form</h2>

<% if @vehicle.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
    <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @vehicle, data: { turbo: false } do |f| %>
  <p>
    <%= f.label :brand, 'Brand' %>
    <%= f.text_field :brand %>
  </p>

  <p>
    <%= f.label :model, 'Model' %>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :year, 'Year' %>
    <%= f.text_field :year %>
  </p>  

  <p>
    <%= f.label :kind, 'Kind' %>
    <%= f.text_field :kind %>
  </p>  

  <p>
    <%= f.submit 'Create Vehicle' %>
  </p>
<% end %>
