<h2 class="text-2xl font-bold mb-4 text-gray-900">Modelos</h2>
<p class="mb-4">
  <%= link_to 'Novo Modelo', new_vehicle_path, class: 'text-blue-500 hover:underline font-medium' %>
</p>
<div class="space-y-4">
  <% @vehicles.each do |vehicle| %>
    <div class="border p-4 rounded-lg shadow-md bg-white dark:bg-gray-800 dark:border-gray-700">
      <p class="text-lg font-semibold text-gray-900 dark:text-gray-100">
        <%= vehicle.brand %> <%= vehicle.model %> (<%= vehicle.year %>)
      </p>
      <p class="text-gray-500 dark:text-gray-400">
        Tipo: <%= vehicle.kind %>
      </p>
      <div class="mt-2 space-x-4">
        <%= link_to 'Detalhes', vehicle_path(vehicle), class: 'text-blue-500 hover:underline font-medium' %>
        <%= link_to 'Editar', edit_vehicle_path(vehicle), class: 'text-yellow-500 hover:underline font-medium' %>
        <%= link_to 'Deletar', vehicle_path(vehicle), method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'text-red-500 hover:underline font-medium' %>
      </div>
    </div>
  <% end %>
</div>
